{
  "name": "ignited-ui",
  "version": "0.0.0",
  "private": true,
  "description": "Enterprise Lit 3.0 UI Component Library with Material Design 3",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @ignited-ui/core dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "format": "prettier --write \"packages/**/*.{ts,js,css,html,json}\"",
    "storybook": "pnpm --filter @ignited-ui/docs storybook",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-lit": "^1.11.0",
    "eslint-plugin-lit-a11y": "^4.1.2",
    "prettier": "^3.2.5",
    "typescript": "^5.5.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
